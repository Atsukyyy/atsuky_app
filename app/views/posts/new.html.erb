<h1>投稿</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:post, url: posts_path) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :content %>
			<%= f.text_field :content %>

			<%= f.submit "投稿！", class: "btn btn-large btn-primary" %>
		<% end %>
  </div>
</div>
